<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#0000FF"
    tools:context="${packageName}.${activityClass}" >
    <SeekBar android:id="@+id/brightness_slider" android:max="255" android:layout_width="match_parent" android:layout_height="wrap_content"></SeekBar>
    <Button android:id="@+id/brightness_slider_ok"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/brightness_slider"
    android:text="OK"/>
    <Button android:id="@+id/brightness_slider_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/brightness_slider"
    android:layout_toRightOf="@+id/brightness_slider_ok"
    android:text="Cancel"/>
</RelativeLayout>
